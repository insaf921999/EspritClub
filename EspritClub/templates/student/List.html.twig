<div class="container pt-2 text-center">
    <h1>Affiche student</h1>
    <center>
<table border="1">
    <thead>
    <tr>
        <th>Id</th>
        <th>NSC</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    {% for i in students %}
        <tr>
            <td>{{ i.id }} </td>
            <td>{{i.NSC}}</td>
            <td>{{i.Email}}</td>
            <td> <a href="{{ path('removestudent',{'id':i.id}) }}">Remove</a></td>
            <td> <a href="{{ path('updatestudent',{'id':i.id}) }}">Update</a></td>
        </tr>
    {%  endfor %}
    </tbody>
</table>
    </center>
<a href ="{{ path("addstudent") }}">Add student</a>
</div>
