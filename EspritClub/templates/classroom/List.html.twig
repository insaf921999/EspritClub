<table border="1">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    {% for i in classrooms %}
        <tr>
            <td>{{ i.id }} </td>
            <td>{{i.name}}</td>
            <td> <a href="{{ path('removeclassroom',{'id':i.id}) }}">Remove</a></td>
            <td> <a href="{{ path('updateclassroom',{'id':i.id}) }}"> Update</a></td>
        </tr>
    {%  endfor %}
    </tbody>
</table>
    </center>
<a href ="{{ path("addclassroom") }}">Add</a>
</div>
</body>
</html>